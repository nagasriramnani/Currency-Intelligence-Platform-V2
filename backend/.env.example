# Backend Environment Variables
# Copy this file to .env and fill in your API keys

# Financial Modeling Prep API (for real-time FX data)
FMP_API_KEY=your_fmp_api_key_here

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Supabase (for database persistence)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Companies House API (for EIS company data)
COMPANIES_HOUSE_API_KEY=your_companies_house_api_key_here

# Tavily API (for AI news/research)
TAVILY_API_KEY=your_tavily_api_key_here

# Ollama (for AI advisor and newsletter generation)
OLLAMA_URL=http://localhost:11434

# =============================================================================
# Newsletter Subscription System
# =============================================================================

# Gmail SMTP credentials (use app-specific password)
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here

# Alternative SMTP configuration (if not using Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com
SMTP_FROM_NAME=Sapphire Intelligence

# Cron token for internal newsletter runs (generate a random string)
NEWSLETTER_CRON_TOKEN=your_secure_random_token_here
